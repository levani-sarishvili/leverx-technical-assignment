<mvc:View
  controllerName="levani.sarishvili.controller.ProductList"
  displayBlock="true"
  xmlns="sap.m"
  xmlns:mvc="sap.ui.core.mvc"
  xmlns:f="sap.f"
  xmlns:fb="sap.ui.comp.filterbar"
  xmlns:t="sap.ui.table"
  xmlns:rowmode="sap.ui.table.rowmodes"
  core:require="{formatMessage: 'sap/base/strings/formatMessage'}"
  xmlns:core="sap.ui.core">

  <f:DynamicPage
    preserveHeaderStateOnScroll="false"
    class="sapUiNoContentPadding">

    <f:title>
      <f:DynamicPageTitle>
        <f:heading>
          <Title text="{i18n>pageTitleProductList}" level="H1" />
        </f:heading>

        <f:expandedContent>
          <Label
            id="expandedLabel"
            text="{i18n>noFiltersActive}" />
        </f:expandedContent>
        <f:snappedContent>
          <Label
            id="snappedLabel"
            text="{i18n>noFiltersActive}" />
        </f:snappedContent>
      </f:DynamicPageTitle>
    </f:title>

    <f:header>
      <f:DynamicPageHeader pinnable="true">
        <fb:FilterBar
          id="filterbar"
          useToolbar="false"
          search=".onFilterBarSearch"
        >
          <fb:filterGroupItems>
            <fb:FilterGroupItem name="Search" groupName="Group1"
              visibleInFilterBar="true">
              <fb:control>
                <SearchField
                  id="searchField"
                  placeholder="{i18n>searchFilterPlaceholder}"
                  search=".onProductSearchPress"
                />
              </fb:control>
            </fb:FilterGroupItem>

            <fb:FilterGroupItem name="Category" label="{i18n>categoryFilterLabel}"
              groupName="Group1"
              visibleInFilterBar="true"
            >
              <fb:control>
                <ComboBox
                  items="{
                    path: '/ProductCategories',
                    sorter: { path: 'Name' }
                  }">
                  <core:Item key="{Key}" text="{Name}" />
                </ComboBox>
              </fb:control>
            </fb:FilterGroupItem>

            <fb:FilterGroupItem name="Brand" label="{i18n>brandFilterLabel}"
              groupName="Group1"
              visibleInFilterBar="true"
            >
              <fb:control>
                <MultiComboBox
                  items="{
                    path: '/ProductBrands',
                    sorter: { path: 'Name' }
                  }">
                  <core:Item key="{Key}" text="{Name}" />
                </MultiComboBox>
              </fb:control>
            </fb:FilterGroupItem>

            <fb:FilterGroupItem name="ReleaseDate" label="{i18n>releaseDateFilterLabel}"
              groupName="Group1"
              visibleInFilterBar="true">
              <fb:control>
                <DatePicker
                  placeholder="{i18n>releaseDateFilterPlaceholder}"
                  displayFormat="yyyy-MM-dd"
                  valueFormat="yyyy-MM-dd"
                  value="{
                    path: 'Products>ReleaseDate',
                    type: 'sap.ui.model.type.Date',
                    formatOptions: { pattern: 'yyyy-MM-dd' } 
                  }"
                />
              </fb:control>
            </fb:FilterGroupItem>
          </fb:filterGroupItems>
        </fb:FilterBar>
      </f:DynamicPageHeader>
    </f:header>

    <f:content>
      <VBox width="100%">
        <t:Table
          id="productTable"
          class="sapUiResponsiveMargin"
          rows="{/Products}"
          rowSelectionChange=".onRowSelectionChange"
          selectionMode="MultiToggle"
          rowActionCount="1"
          selectionBehavior="Row"
          alternateRowColors="true"
          sort=".onProductTableSort"
        >
          <t:rowMode>
            <rowmode:Auto
              minRowCount="{appViewModel>/tableRowCount/productTableRowCount}" />
          </t:rowMode>

          <t:noData>
            <IllustratedMessage enableVerticalResponsiveness="true"
              illustrationType="sapIllus-NoData">
            </IllustratedMessage>
          </t:noData>

          <t:extension>
            <OverflowToolbar style="Standard">
              <Title
                id="productTableTitle"
                text="{
                  parts: [
                    'i18n>productTableTitle',
                    'appViewModel>/tableRowCount/productTableRowCount'
                  ],
                  formatter: 'formatMessage'
                }"
              />

              <ToolbarSpacer />
              <Button
                id="createProductButton"
                text="{i18n>createButtonText}"
                type="Transparent"
                press=".onCreateProductPress" />
              <Button
                id="deleteProductButton"
                text="{i18n>deleteButtonText}"
                type="Transparent"
                enabled="{= ${appViewModel>/selectedProductIds}.length > 0 }"
                press=".onDeleteProductPress" />
            </OverflowToolbar>
          </t:extension>

          <t:columns>
            <!-- Product name -->
            <t:Column
              hAlign="Begin"
              sortProperty="Name"
              width="15rem"
            >
              <Label text="{i18n>productTableNameColumn}" />
              <t:template>
                <Text text="{Name}" />
              </t:template>
            </t:Column>

            <!-- Price -->
            <t:Column
              hAlign="End"
              sortProperty="Price"
              width="10rem"
            >
              <Label text="{i18n>productTablePriceColumn}" />
              <t:template>
                <ObjectNumber
                  number="{path: 'Price'}"
                  unit="USD"
                  emphasized="false"
                  textAlign="End"
                />
              </t:template>
            </t:Column>

            <!-- Category -->
            <t:Column
              hAlign="Begin"
              sortProperty="Category"
              width="15rem"
            >
              <Label text="{i18n>productTableCategoryColumn}" />
              <t:template>
                <Text text="{Category}" />
              </t:template>
            </t:Column>

            <!-- Brand -->
            <t:Column
              hAlign="Begin"
              sortProperty="Brand"
              width="12rem"
            >
              <Label text="{i18n>productTableBrandColumn}" />
              <t:template>
                <Text text="{Brand}" />
              </t:template>
            </t:Column>

            <!-- SupplierName -->
            <t:Column
              hAlign="Begin"
              sortProperty="SupplierName"
              width="20rem"
            >
              <Label text="{i18n>productTableSupplierNameColumn}" />
              <t:template>
                <Text text="{SupplierName}" />
              </t:template>
            </t:Column>

            <!-- ReleaseDate -->
            <t:Column
              hAlign="End"
              sortProperty="ReleaseDate"
              width="12rem"
            >
              <Label text="{i18n>productTableReleaseDateColumn}" />
              <t:template>
                <Text
                  text="{ 
                  path: 'ReleaseDate', 
                  type: 'sap.ui.model.type.Date', 
                  formatOptions: { 
                    pattern: 'yyyy-MM-dd' 
                  } 
                }" />
              </t:template>
            </t:Column>

            <!-- StockStatus -->
            <t:Column
              hAlign="Begin"
              sortProperty="StockStatus"
              width="15rem"
            >
              <Label text="{i18n>productTableStockStatusColumn}" />
              <t:template>
                <ObjectStatus text="{StockStatus}"
                  state="{
                    path: 'StockStatus', 
                    formatter: '.formatter.formatStockStatus'
                  }"
                />
              </t:template>
            </t:Column>

            <!-- Rating -->
            <t:Column
              hAlign="Center"
              sortProperty="Rating"
              width="15rem"
            >
              <Label text="{i18n>productTableRatingColumn}" />
              <t:template>
                <RatingIndicator
                  id="RI_display_only"
                  iconSize="0.8rem"
                  maxValue="5"
                  class="sapUiSmallMarginBottom"
                  value="{Rating}"
                  displayOnly="true" />
              </t:template>
            </t:Column>
          </t:columns>

          <!-- Row Actions -->
          <t:rowActionTemplate>
            <t:RowAction>
              <t:RowActionItem
                icon="sap-icon://feeder-arrow"
                type="Navigation"
                press=".onProductPress" />
            </t:RowAction>
          </t:rowActionTemplate>
        </t:Table>
      </VBox>
    </f:content>
  </f:DynamicPage>
</mvc:View>