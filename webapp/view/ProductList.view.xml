<mvc:View
  controllerName="levani.sarishvili.controller.ProductList"
  displayBlock="true"
  xmlns="sap.m"
  xmlns:mvc="sap.ui.core.mvc"
  xmlns:f="sap.f"
  xmlns:fb="sap.ui.comp.filterbar"
  xmlns:t="sap.ui.table"
  xmlns:rowmode="sap.ui.table.rowmodes"
  xmlns:rowmodes="sap.ui.table.rowmodes"
  xmlns:core="sap.ui.core"
  xmlns:layout="sap.ui.layout">

  <f:DynamicPage
    id="productListPage"
    headerExpanded="true"
    toggleHeaderOnTitleClick="true"
    preserveHeaderStateOnScroll="false"
    class="sapUiNoContentPadding">

    <!-- Title -->
    <f:title>
      <f:DynamicPageTitle>
        <f:snappedContent>
          <Breadcrumbs separatorStyle="{/selected}">
            <Link text="ProductList" />
          </Breadcrumbs>
        </f:snappedContent>
        <f:heading>
          <Title text="ProductList" level="H1" />
        </f:heading>
        <f:expandedContent>
          <Breadcrumbs separatorStyle="{/selected}">
            <Link text="ProductList" />
          </Breadcrumbs>
        </f:expandedContent>

      </f:DynamicPageTitle>
    </f:title>

    <!-- DynamicPage Header -->
    <f:header>
      <f:DynamicPageHeader pinnable="true">
        <!-- Filter bar -->
        <fb:FilterBar id="filterbar" persistencyKey="myPersKey" useToolbar="false"
          search=".onSearch" filterChange=".onFilterChange">
          <fb:filterGroupItems>
            <fb:FilterGroupItem name="Search" groupName="Group1"
              visibleInFilterBar="true">
              <fb:control>
                <!-- Search field -->
                <SearchField
                  id="productSearchField"
                  placeholder="Search product"
                  search="onProductSearchPress"
                />
              </fb:control>
            </fb:FilterGroupItem>

            <fb:FilterGroupItem name="Category" label="Category"
              groupName="Group1"
              visibleInFilterBar="true">
              <fb:control>
                <!-- Combobox -->
                <ComboBox
                  id="categoryFilter"
                  items="{
                    path: '/ProductCategories',
                    sorter: { path: 'Name' }
                    }">
                  <core:Item key="{Key}" text="{Name}" />
                </ComboBox>
              </fb:control>
            </fb:FilterGroupItem>

            <fb:FilterGroupItem name="Brand" label="Brand"
              groupName="Group1"
              visibleInFilterBar="true">
              <fb:control>
                <!-- Multi combobox -->
                <MultiComboBox
                  id="brandFilter"
                  selectionChange="handleSelectionChange"
                  selectionFinish="handleSelectionFinish"
                  items="{
                    path: '/ProductBrands',
                    sorter: { path: 'Name' }
                    }">
                  <core:Item key="{Key}" text="{Name}" />
                </MultiComboBox>
              </fb:control>
            </fb:FilterGroupItem>

            <fb:FilterGroupItem name="ReleaseDate" label="Release Date"
              groupName="Group1"
              visibleInFilterBar="true">
              <fb:control>
                <!-- Data picker -->
                <DatePicker
                  id="releaseDateFilter"
                  change="handleChange"
                />
              </fb:control>
            </fb:FilterGroupItem>
          </fb:filterGroupItems>
        </fb:FilterBar>
      </f:DynamicPageHeader>
    </f:header>

    <!-- Content wrapped in a VBox -->
    <f:content>
      <FlexBox width="100%">
        <!-- Products Table -->
        <t:Table
          class="sapUiResponsiveMargin"
          rows="{/Products}"
          rowSelectionChange="onRowSelectionChange"
          ariaLabelledBy="title"
          id="productTable"
          selectionMode="MultiToggle"
          rowActionCount="1"
        >

          <t:extension>
            <OverflowToolbar style="Clear">
              <Title id="title" text="Products" />
              <ToolbarSpacer />
              <Button
                id="addProductButton"
                text="Add"
                press=".onAddProductPress" />
              <Button
                id="deleteProductButton"
                text="Delete"
                enabled="false"
                press=".onDeleteProductPress" />
            </OverflowToolbar>
          </t:extension>

          <t:columns>
            <!-- Product name -->
            <t:Column
              hAlign="Begin"
              sortProperty="Name"
            >
              <Label text="Name" />
              <t:template>
                <Text text="{Name}" />
              </t:template>
            </t:Column>

            <!-- Price -->
            <t:Column
              hAlign="Begin"
              sortProperty="Price"
            >
              <Label text="Price" />
              <t:template>
                <Text text="{path: 'Price', formatter: '.formatter.formatPrice'}" />
              </t:template>
            </t:Column>

            <!-- Category -->
            <t:Column
              hAlign="Begin"
              sortProperty="Category"
            >
              <Label text="Category" />
              <t:template>
                <Text text="{Category}" />
              </t:template>
            </t:Column>

            <!-- Brand -->
            <t:Column
              hAlign="Begin"
              sortProperty="Brand"
            >
              <Label text="Brand" />
              <t:template>
                <Text text="{Brand}" />
              </t:template>
            </t:Column>

            <!-- SupplierName -->
            <t:Column
              hAlign="Begin"
              sortProperty="SupplierName"
            >
              <Label text="SupplierName" />
              <t:template>
                <Text text="{SupplierName}" />
              </t:template>
            </t:Column>

            <!-- ReleaseDate -->
            <t:Column
              hAlign="Begin"
              sortProperty="ReleaseDate"
            >
              <Label text="ReleaseDate" />
              <t:template>
                <Text text="{ReleaseDate}" />
              </t:template>
            </t:Column>

            <!-- Rating -->
            <t:Column
              hAlign="Begin"
              sortProperty="Rating"
            >
              <Label text="Rating" />
              <t:template>
                <RatingIndicator
                  id="RI_display_only"
                  iconSize="1rem"
                  maxValue="5"
                  class="sapUiSmallMarginBottom"
                  value="{Rating}"
                  displayOnly="true" />
              </t:template>
            </t:Column>
          </t:columns>

          <!-- Row Actions -->
          <t:rowActionTemplate>
            <t:RowAction>
              <t:RowActionItem
                icon="sap-icon://feeder-arrow"
                text="Edit"
                type="Custom"
                press=".onEditRowPress" />
            </t:RowAction>
          </t:rowActionTemplate>
        </t:Table>
      </FlexBox>
    </f:content>
  </f:DynamicPage>
</mvc:View>