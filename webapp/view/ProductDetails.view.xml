<mvc:View
  controllerName="levani.sarishvili.controller.ProductDetails"
  displayBlock="true"
  xmlns="sap.m"
  xmlns:mvc="sap.ui.core.mvc"
  xmlns:f="sap.f"
  xmlns:form="sap.ui.layout.form"
  xmlns:fb="sap.ui.comp.filterbar"
  xmlns:t="sap.ui.table"
  xmlns:core="sap.ui.core"
  xmlns:layout="sap.ui.layout">

  <f:DynamicPage
    id="productDetailsPage"
    headerExpanded="true"
    toggleHeaderOnTitleClick="true"
    preserveHeaderStateOnScroll="false"
    class="sapUiNoContentPadding">

    <!-- Title -->
    <f:title>
      <f:DynamicPageTitle>
        <f:snappedContent>
          <HBox alignItems="Center" justifyContent="SpaceBetween">
            <Breadcrumbs separatorStyle="{/selected}">
              <Link text="{i18n>pageTitleProductList}" press=".onNavHome" />
              <Link text="{i18n>breadcrumbProductDetails}" />
            </Breadcrumbs>

            <HBox justifyContent="End">
              <Button
                text="{i18n>editButtonText}"
                press=".onAddOrderPress"
                class="sapUiSmallMarginEnd" />
              <Button
                text="{i18n>deleteButtonText}"
                enabled="{= ${selectionModel>/selectedProductIds}.length > 0 }"
                press=".onDeleteOrderPress" />
            </HBox>
          </HBox>
        </f:snappedContent>
        <f:heading>
          <Title text="{Name}" level="H1" />
        </f:heading>
        <f:expandedContent>
          <HBox alignItems="Center" justifyContent="SpaceBetween">
            <Breadcrumbs separatorStyle="{/selected}">
              <Link text="{i18n>pageTitleProductList}" press=".onNavHome" />
              <Link text="{i18n>breadcrumbProductDetails}" />
            </Breadcrumbs>

            <HBox justifyContent="End">
              <Button
                text="{i18n>editButtonText}"
                press=".onAddOrderPress"
                type="Emphasized"
                class="sapUiSmallMarginEnd" />
              <Button
                text="{i18n>deleteButtonText}"
                enabled="{= ${selectionModel>/selectedProductIds}.length > 0 }"
                press=".onDeleteOrderPress" />
            </HBox>
          </HBox>
        </f:expandedContent>
      </f:DynamicPageTitle>
    </f:title>

    <!-- DynamicPage Header -->
    <f:header>
      <f:DynamicPageHeader pinnable="true">
        <VBox class="sapUiSmallMargin">
          <form:SimpleForm id="SimpleFormDisplayColumn_threeGroups346"
            editable="false"
            layout="ColumnLayout"
            columnsM="3"
            columnsL="4"
            columnsXL="6"
          >
            <form:content>
              <Label text="Name" />
              <Text id="nameText" text="{SupplierName}" />
              <Label text="Street/No." />
              <Text text="{Street} {HouseNumber}" />
              <Label text="ZIP Code/City" />
              <Text text="{ZIPCode} {City}" />
              <Label text="Country" />
              <Text id="countryText" text="{Country}" />
              <Label text="Web" />
              <Link text="Url" href="{Url}" />
              <Label text="Twitter" />
              <Text text="{Twitter}" />
              <Label text="Email" />
              <Text text="{Email}" />
              <Label text="Tel." />
              <Text text="{Tel}" />
              <Label text="SMS" />
              <Text text="{Sms}" />
              <Label text="Mobile" />
              <Text text="{Mobile}" />
              <Label text="Pager" />
              <Text text="{Pager}" />
              <Label text="Fax" />
              <Text text="{Fax}" />
            </form:content>
          </form:SimpleForm>
        </VBox>
      </f:DynamicPageHeader>
    </f:header>

    <!-- Content wrapped in a VBox -->
    <f:content>
      <FlexBox width="100%">
        <!-- Products Table -->
        <t:Table
          class="sapUiResponsiveMargin"
          rows="{/SalesOrders}"
          rowSelectionChange="onRowSelectionChange"
          ariaLabelledBy="title"
          id="productDetailsTable"
          selectionMode="MultiToggle"
          rowActionCount="1"
          selectionBehavior="Row"
          alternateRowColors="true"
        >
          <!-- Table toolbar -->
          <t:extension>
            <OverflowToolbar style="Standard">
              <Title
                text="Orders" />
              <ToolbarSpacer />

              <SearchField width="20rem" placeholder="Search order"></SearchField>
            </OverflowToolbar>
          </t:extension>

          <!-- Columns aggregation -->
          <t:columns>
            <!-- OrderId -->
            <t:Column
              hAlign="Begin"
              sortProperty="OrderId"
            >
              <Label text="{i18n>orderTableIdColumn}" />
              <t:template>
                <Text text="{OrderId}" />
              </t:template>
            </t:Column>

            <!-- Customer -->
            <t:Column
              hAlign="Begin"
              sortProperty="Customer"
            >
              <Label text="{i18n>orderTableCustomerColumn}" />
              <t:template>
                <Text text="{Customer}" />
              </t:template>
            </t:Column>

            <!-- Quantity -->
            <t:Column
              hAlign="Begin"
              sortProperty="Quantity"
            >
              <Label text="{i18n>orderTableQuantityColumn}" />
              <t:template>
                <Text text="{Quantity}" />
              </t:template>
            </t:Column>

            <!-- OrderDate -->
            <t:Column
              hAlign="Begin"
              sortProperty="OrderDate"
            >
              <Label text="{i18n>orderTableOrderDateColumn}" />
              <t:template>
                <Text text="{OrderDate}" />
              </t:template>
            </t:Column>

            <!-- Status -->
            <t:Column
              hAlign="Begin"
              sortProperty="Status"
            >
              <Label text="{i18n>orderTableStatusColumn}" />
              <t:template>
                <Text text="{Status}" />
              </t:template>
            </t:Column>

            <!-- ShippingCost -->
            <t:Column
              hAlign="Begin"
              sortProperty="ShippingCost"
            >
              <Label text="{i18n>orderTableShippingCostColumn}" />
              <t:template>
                <Text text="{ShippingCost}" />
              </t:template>
            </t:Column>
          </t:columns>

          <!-- TotalPrice -->
          <t:Column
            hAlign="Begin"
            sortProperty="TotalPrice"
          >
            <Label text="{i18n>orderTableTotalPriceColumn}" />
            <t:template>
              <Text text="{TotalPrice}" />
            </t:template>
          </t:Column>

          <!-- Row Actions -->
          <t:rowActionTemplate>
            <t:RowAction>
              <t:RowActionItem
                icon="sap-icon://feeder-arrow"
                type="Custom"
                press=".onEditRowPress" />
            </t:RowAction>
          </t:rowActionTemplate>
        </t:Table>
      </FlexBox>
    </f:content>
  </f:DynamicPage>
</mvc:View>